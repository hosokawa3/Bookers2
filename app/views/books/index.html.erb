<h2>Books</h2>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
  <tr>
    <td><%= image_tag book.user.get_profile_image(80,80)%></td>
    <td><%= link_to book.title, "/books/#{book.id}" %></td>
    <td><%= book.body %></td>
  </tr>
  </tbody>
</table>
<% end %>

<%= render 'info', book: @book %>
