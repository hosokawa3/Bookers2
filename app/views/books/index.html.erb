<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
<div class="row">
  <div class="col-md-3">
    <%= render 'info', book: @book, user: @user %>
  </div>
<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= link_to user_path(book.user) do %>
    <%= image_tag book.user.get_profile_image(80,80) %>
    <% end %></td>
    <td><%= link_to book.title, "/books/#{book.id}" %></td>
    <td><%= book.body %></td>
  </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>
</div>