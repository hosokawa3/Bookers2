<div class="container">
<div class="row">
  <div class="col-md-3">
    <%= render 'info', book: @book, user: @user %>
  </div>
<div class="offset-md-1"></div>
<div class="col-md-8">
<h2>Books</h2>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.user.get_profile_image(80,80)%></td>
    <td><%= link_to book.title, "/books/#{book.id}" %></td>
    <td><%= book.body %></td>
  </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>
</div>