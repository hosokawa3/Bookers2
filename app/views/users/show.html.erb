<h2>User info</h2>
<%= image_tag @user.get_profile_image(100,100) %>

<table>
  <tbody>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= @user.introduction %></td>
    </tr>
  </tbody>
</table>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(80,80) %></td>
      <td><%= link_to book.title, "/books/#{book.id}" %></td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
  <% end %>
</table>
