<div class="container">
<div class="row">
<div class="col-6 mx-auto">
<h2>User info</h2>
 <% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @user do |f| %>
  <div class="form-group">
    <%= f.label:name %>
    <%= f.text_field :name, autofocus: true, placeholder:"名前", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label:image %>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file" %>
  </div>
  <div class="form-group">
    <%= f.label:Introduction %>
    <%= f.text_area :introduction, class: "form-control" %>
  </div>
  <div class="form-group"><%= f.submit "Update User", class: "btn btn-secondary" %></div>
<% end %>
</div>
</div>
</div>